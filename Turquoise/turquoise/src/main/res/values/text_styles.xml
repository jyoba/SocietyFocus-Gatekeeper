<resources>

    <style name="TextView">

    </style>


    <style name="TextView.SplashTitle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="TextView.SplashSubTitle">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextView.Header">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextView.Content">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="TextView.Content.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Content.White.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextView.Content.Grey">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextView.SubHeader.Grey">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextView.SubHeader.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Header.Grey">
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="TextView.Header.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextView.Content.StatusOpen">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_red_dark</item>
    </style>

    <style name="TextView.Content.StatusInProgress">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_orange_dark</item>
    </style>

    <style name="TextView.Content.StatusClosed">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>


    <style name="TextView.Header.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>
